RESOLUÇÃO 2

let num = 75; //numero pré-definido
let a = 0;
let b = 1;
const n = 100; 
let fibo = false;

while (b <= n) {
    
    if (b === num){
        fibo = true;        
      }
    console.log(b); 
    const c = a;
    a = b;
    b = c + b;
  
}

console.log('---------------------------------------------------')

if (fibo) {
    console.log('----------', num, 'esta na fibonacchi -------');
  } else {
    console.log('------', num, 'não esta na fibonacchi -------');
  }

  console.log('---------------------------------------------------')
  
//fim  
  
